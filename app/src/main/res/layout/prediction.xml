<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:baselineAligned="false">

    <View
        android:id="@+id/pred_RectangleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/pred_rectangle"/>

    <TextView
        android:id="@+id/pred_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/pred_situation"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:textColor="#777777"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/pred_situation"
        android:layout_width="94dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/pred_weather"
        android:layout_marginRight="10dp"
        android:gravity="bottom|right"
        android:textStyle="bold"
        android:textColor="#777777"
        android:textSize="45dp" />

    <ImageView
        android:id="@+id/pred_weather"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true" />

    <!--android:gravity="center" /-->

    <!--android:gravity="center" -->

</RelativeLayout>
